'.source.kotlin':
  'KDoc':
    'prefix': 'kdoc'
    'body': """
      /**
       * ${1:Short Description}
       *
       * ${2:Detailed Description}
       *
       * @${3:Tags}
       */
    """

  'Function':
    'prefix': 'fun'
    'body': """
      fun ${1:name}(${2:Arguments}) {
        $3
      }
    """
  'Single-line Function':
    'prefix': 'sfun'
    'body': 'fun ${1:name}(${2:Arguments}) = $3'
  'Argument':
    'prefix': 'arg'
    'body': '${1:name}: ${2:Type}'


  'Variable':
    'prefix': 'var'
    'body': 'var ${1:name}: ${2:Type}'
  'Value':
    'prefix': 'val'
    'body': 'val ${1:name}: ${2:Type} = ${3:value}'

  'Structure Block Comment':
    'prefix': 'sbc'
    'body': """
    ///////////////////////////////////////////////////////////
    // ${1:Comment}
    ///////////////////////////////////////////////////////////
    """
